<header class="header">
<a class="logo" href="/">Track App</a>
<div class="menu-optns">
      <%= link_to 'Foods', foods_path, class: "nav-link" %>
      <%= link_to 'Recipes', recipes_path, class: "nav-link" %> 
      <%= link_to 'Public Recipes', public_recipes_path, class: "nav-link" %>
</div>
<div class="session-msg"> 
      <% if user_signed_in? %> 
        Signed in as <%= current_user.name %>. <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "sign-out-btn" %> 
      <% else %> 
        <%= link_to 'Register', new_user_registration_path, class: "sign-out-btn" %> &nbsp;or&nbsp; <%= link_to 'Sign in', new_user_session_path, class: "sign-out-btn"%> 
      <% end %> 
    </div> 

</header>